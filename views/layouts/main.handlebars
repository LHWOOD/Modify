<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Document</title>
  </head>
  <body>
    <div id="animation-bg" width="100%" height="100%">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark fs-3">
        <div class="container-fluid">
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <h1 class="heading text-center text-white">MOD-ify</h1>
          <div
            class="flex-row-reverse collapse navbar-collapse"
            id="navbarSupportedContent"
          >
            <ul class="navbar-nav m-3 mb-0">
              <li class="nav-item">
                {{#if loggIn}}
                  <a href="/dashboard" class="nav-link" href="#">Dashboard</a>
                {{/if}}
              </li>
              <li class="nav-item">
                <!-- THIS WILL CHANGE TO LOG OUT WHEN USER IS SIGNED IN MAKE SURE JAVASCRIPT HAS CLICK LISTENER TO DO IT -->
                {{#if loggIn}}
                  <a href="/" class="nav-link" href="#" id="logout">Logout</a>
                {{else}}
                  <a href="/" class="nav-link" href="#">Login</a>
                {{/if}}
              </li>
            </ul>
          </div>
        </div>
      </nav>

      {{{body}}}
    </div>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r121/three.min.js"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.fog.min.js"
    ></script>
    <script>
      VANTA.FOG({ el: "#animation-bg", mouseControls: true, touchControls: true,
      gyroControls: false, minHeight: 200.00, minWidth: 200.00, highlightColor:
      0x41009b, midtoneColor: 0xbc00ff, lowlightColor: 0x6900ff, baseColor:
      0x8600ff, blurFactor: 0.90, speed: 2.00, zoom: 0.50 })
    </script>

    <script
      src="https://code.jquery.com/jquery-3.6.0.min.js"
      integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
      crossorigin="anonymous"
    ></script>
    <script src="/js/logout.js"></script>
  </body>
</html>